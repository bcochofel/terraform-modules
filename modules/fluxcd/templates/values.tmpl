---
additionalArgs:
  - --connect=ws://127.0.0.1:3032
extraContainers:
  - name: fluxcloud
    image: justinbarrick/fluxcloud:v0.3.9
    imagePullPolicy: IfNotPresent
    ports:
      - containerPort: 3032
    env:
      - name: SLACK_URL
        value: "${slack_url}"
      - name: SLACK_USERNAME
        value: "${slack_username}"
      - name: SLACK_CHANNEL
        value: "${slack_channel}"
      - name: SLACK_ICON_EMOJI
        value: "${slack_emoji}"
      - name: GITHUB_URL
        value: "${github_url}"
      - name: LISTEN_ADDRESS
        value: ":3032"
